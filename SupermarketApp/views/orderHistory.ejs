<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <title>Order History</title>
</head>
<body class="home-page">
  <% const showSearch = false; const showNavLinks = true; %>
  <%- include('partials/nav', { user, showSearch, showNavLinks }) %>

  <div class="container mt-4">
    <header class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">Order History</h2>
        <p class="text-muted mb-0">Past orders for <%= (user && (user.username || user.email)) || 'you' %></p>
      </div>
      <a class="btn btn-lime btn-lg fw-semibold px-4" href="/shopping">Back to Shopping</a>
    </header>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error.join(', ') %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success.join(', ') %></div>
    <% } %>

    <% if (!orders || !orders.length) { %>
      <div class="text-center text-muted py-5 border rounded">
        <p class="mb-1">No orders yet.</p>
        <p class="mb-0">Start shopping to see your orders here.</p>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Invoice #</th>
              <th>Placed On</th>
              <th>Payment</th>
              <th>Status</th>
              <th class="text-end">Total</th>
              <th style="width: 220px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <%
                const shippingRaw = order.shippingStatus || order.status || 'Processing';
                const shipping = String(shippingRaw || '').toLowerCase();
                const canCancel = !shipping.includes('deliver') && !shipping.includes('cancel');
              %>
              <tr>
                <td class="fw-semibold"><%= order.invoiceNumber %></td>
                <td><%= new Date(order.placedAt).toLocaleString() %></td>
                <td><span class="badge bg-info text-dark text-uppercase"><%= order.customer.paymentMethod %></span></td>
                <% 
                  const statusRaw = shippingRaw || (order.customer && order.customer.paymentMethod && order.customer.paymentMethod.toLowerCase() === 'cash' ? 'Cash on Delivery' : 'Processing');
                  const status = shipping;
                  const statusClass = (() => {
                    if (status === 'delivered') return 'bg-success';
                    if (status === 'cancelled' || status === 'canceled') return 'bg-danger';
                    if (status.includes('out')) return 'bg-primary';
                    if (status.includes('pack')) return 'bg-info text-dark';
                    if (status === 'cash on delivery' || status === 'cash') return 'bg-warning text-dark';
                    return 'bg-secondary';
                  })();
                %>
                <td><span class="badge <%= statusClass %> text-capitalize"><%= statusRaw || 'Processing' %></span></td>
                <td class="text-end">$<%= Number(order.total || 0).toFixed(2) %></td>
                <td>
                  <div class="d-flex gap-2 flex-wrap">
                    <a href="/orders/<%= order.invoiceNumber %>" class="btn btn-sm btn-lime pill-shape">View invoice</a>
                    <a href="/orders/<%= order.invoiceNumber %>/track" class="btn btn-sm btn-dark-green pill-shape">Track</a>
                    <% if (canCancel) { %>
                      <a href="/orders/<%= order.invoiceNumber %>/cancel" class="btn btn-sm btn-danger pill-shape">Cancel</a>
                    <% } %>
                    <button class="btn btn-sm btn-outline-secondary pill-shape" type="button" onclick="toggleItems('<%= order.invoiceNumber %>')">Items</button>
                  </div>
                </td>
              </tr>
              <tr id="items-<%= order.invoiceNumber %>" class="d-none bg-light">
                <td colspan="6">
                  <ul class="list-unstyled mb-0">
                    <% (order.cartItems || []).forEach(item => { %>
                      <li class="d-flex justify-content-between border-bottom py-1">
                        <span><%= item.name %> x <%= item.quantity %></span>
                        <span>$<%= Number(item.subtotal || 0).toFixed(2) %></span>
                      </li>
                    <% }) %>
                  </ul>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script>
    function toggleItems(id) {
      var row = document.getElementById('items-' + id);
      if (!row) return;
      row.classList.toggle('d-none');
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
