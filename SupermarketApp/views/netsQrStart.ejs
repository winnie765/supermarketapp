<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>NETS QR Payment</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <% const showSearch = false; %>
  <%- include('partials/nav', { user, showSearch }) %>

  <div class="container py-4">
    <div class="card mx-auto" style="max-width: 520px;">
      <div class="card-header">NETS QR</div>
      <div class="card-body">
        <p class="text-muted mb-3">Enter the amount to generate a NETS QR code.</p>
        <form action="/generateNETSQR" method="post">
          <div class="mb-3">
            <label class="form-label">Amount (SGD)</label>
            <input type="number" name="cartTotal" class="form-control" min="0.01" step="0.01" required>
          </div>
          <button class="btn btn-success w-100" type="submit">Generate NETS QR</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
