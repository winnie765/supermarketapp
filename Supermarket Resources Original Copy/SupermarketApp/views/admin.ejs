<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <% const showSearch = false; const showNavLinks = false; %>
  <%- include('partials/nav', { user, showSearch, showNavLinks }) %>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4">
            <h1 class="text-center fw-bold mb-4">Admin Dashboard</h1>
            <div class="row g-4 justify-content-center">
              <div class="col-sm-6">
                <a href="/inventory" class="text-decoration-none">
                  <div class="card h-100 border-0 shadow-sm" style="background:#b7e38a; color:#2f4d1f;">
                    <div class="card-body d-flex align-items-center justify-content-center" style="height:180px;">
                      <span class="fw-bold fs-4">Inventory</span>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-sm-6">
                <a href="/admin/users" class="text-decoration-none">
                  <div class="card h-100 border-0 shadow-sm" style="background:#b7e38a; color:#2f4d1f;">
                    <div class="card-body d-flex align-items-center justify-content-center" style="height:180px;">
                      <span class="fw-bold fs-4">Users</span>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
