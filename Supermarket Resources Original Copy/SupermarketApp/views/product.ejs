<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %> - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <% const showSearch = false; %>
  <%- include('partials/nav', { user, showSearch }) %>
  <div class="container mt-4">
    <h3><%= product.name %></h3>
    <% if (product.image) { %>
      <img src="/images/<%= product.image %>" alt="<%= product.name %>" class="product-detail-img mb-3">
    <% } else { %>
      <div class="product-detail-img d-flex align-items-center justify-content-center text-muted">No Image</div>
    <% } %>
    <div class="fw-semibold mb-3">$<%= Number(product.price || 0).toFixed(2) %></div>
    <form action="/add-to-cart/<%= product.id %>" method="post">
      <button class="btn btn-primary">Add to Cart</button>
    </form>
  </div>
</body>
</html>
