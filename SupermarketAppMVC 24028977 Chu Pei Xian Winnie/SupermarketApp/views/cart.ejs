<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      min-height: 100vh;
    }
    .cart-card {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.1);
      margin-top: 20px;
    }
    img.cart-img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 5px;
    }
    .quantity-btn {
      width: 32px;
      height: 32px;
      padding: 0;
      line-height: 1;
    }
  </style>
</head>
<body class="home-page">

  <% const showSearch = false; %>
  <%- include('partials/nav', { user, showSearch }) %>

  <div class="container py-5">
    <div class="cart-card">

      <h2 class="mb-4">Shopping Cart</h2>

      <% if (messages && messages.success && messages.success.length) { %>
        <div class="alert alert-success"><%= messages.success.join(', ') %></div>
      <% } %>

      <% if (messages && messages.error && messages.error.length) { %>
        <div class="alert alert-danger"><%= messages.error.join(', ') %></div>
      <% } %>

      <% if (cart && cart.length > 0) { %>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach(item => { %>
            <tr>
              <td><%= item.name %></td>
              <td>
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" alt="<%= item.name %>" class="cart-img">
                <% } else { %>No image<% } %>
              </td>
              <td>$<%= Number(item.price).toFixed(2) %></td>
              <td>
                <form action="/cart/update/<%= item.id %>" method="post" class="d-flex align-items-center gap-2 cart-qty-form">
                  <button type="button" class="btn btn-outline-secondary btn-sm qty-btn quantity-btn" data-step="-1" aria-label="Decrease quantity">-</button>
                  <input
                    type="number"
                    name="quantity"
                    class="form-control form-control-sm text-center qty-input"
                    value="<%= item.qty %>"
                    min="1"
                    style="width: 70px;"
                    aria-label="Quantity for <%= item.name %>"
                  >
                  <button type="button" class="btn btn-outline-secondary btn-sm qty-btn quantity-btn" data-step="1" aria-label="Increase quantity">+</button>
                </form>
              </td>
              <td>$<%= (Number(item.price) * Number(item.qty)).toFixed(2) %></td>
              <td>
                <a href="/cart/remove/<%= item.id %>" class="btn btn-danger btn-sm">Remove</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4" class="text-end">Total:</th>
              <th>$<%= Number(total).toFixed(2) %></th>
              <th></th>
            </tr>
            <%
              const fee = (typeof deliveryFee === 'undefined' || deliveryFee === null) ? 0 : deliveryFee;
              const gstValue = (typeof gst === 'undefined' || gst === null) ? Number(total) * 0.09 : Number(gst);
              const grand = (typeof grandTotal === 'undefined' || grandTotal === null)
                ? Number(total) + Number(gstValue) + (fee || 0)
                : grandTotal;
            %>
            <tr>
              <th colspan="4" class="text-end">GST (9%):</th>
              <th>$<%= Number(gstValue).toFixed(2) %></th>
              <th></th>
            </tr>
            <tr>
              <th colspan="4" class="text-end">Delivery Fee:</th>
              <th><%= fee === 0 ? 'Free' : '$' + Number(fee).toFixed(2) %></th>
              <th></th>
            </tr>
            <tr>
              <th colspan="4" class="text-end">Grand Total:</th>
              <th>$<%= Number(grand).toFixed(2) %></th>
              <th></th>
            </tr>
          </tfoot>
        </table>
      </div>

      <div class="d-flex justify-content-between mt-3">
        <div>
          <a href="/shopping" class="btn btn-lime btn-lg me-2">Back to Shopping</a>
          <a href="/cart/clear" class="btn btn-danger btn-lg">Clear Cart</a>
        </div>
        <a href="/checkout" class="btn btn-lime btn-lg">Proceed to Checkout</a>
      </div>

      <% } else { %>
        <div class="alert alert-info text-center">Your cart is empty</div>
        <div class="text-center mt-3">
          <a href="/shopping" class="btn btn-lime">Back to Shopping</a>
        </div>
      <% } %>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function() {
      const forms = document.querySelectorAll('.cart-qty-form');
      forms.forEach(form => {
        const input = form.querySelector('.qty-input');
        const buttons = form.querySelectorAll('.qty-btn');
        if (!input) return;
        buttons.forEach(btn => {
          btn.addEventListener('click', () => {
            const step = Number(btn.dataset.step) || 0;
            let next = Number(input.value) || 1;
            next += step;
            if (next < 1) next = 1;
            input.value = next;
            form.submit();
          });
        });
        input.addEventListener('change', () => {
          let next = Number(input.value) || 1;
          if (next < 1) next = 1;
          input.value = next;
          form.submit();
        });
      });
    })();
  </script>
</body>
</html>
