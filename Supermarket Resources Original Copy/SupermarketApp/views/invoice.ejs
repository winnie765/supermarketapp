<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    .invoice-wrapper {
      max-width: 1100px;
      margin: 30px auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
      padding: 40px;
    }
    .invoice-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #e6e6e6;
      padding-bottom: 16px;
      margin-bottom: 24px;
    }
    .invoice-code {
      font-size: 14px;
      letter-spacing: 1px;
      text-transform: uppercase;
      color: #6c757d;
    }
    .invoice-actions .btn {
      min-width: 140px;
    }
    @media print {
      .navbar,
      .invoice-actions,
      .download-note {
        display: none !important;
      }
      body {
        background: #fff;
      }
      .invoice-wrapper {
        box-shadow: none;
        margin: 0;
        padding: 0;
      }
    }
  </style>
</head>
<body class="bg-light">
  <% const showSearch = false; %>
  <%- include('partials/nav', { user, showSearch }) %>

  <div class="container">
    <div class="invoice-wrapper" id="invoice">
      <% if (messages && messages.success && messages.success.length) { %>
        <div class="alert alert-success"><%= messages.success.join(', ') %></div>
      <% } %>
      <% if (messages && messages.error && messages.error.length) { %>
        <div class="alert alert-danger"><%= messages.error.join(', ') %></div>
      <% } %>

      <div class="invoice-header">
        <div>
          <div class="invoice-code">Invoice</div>
          <h2 class="mb-1"><%= order.invoiceNumber %></h2>
          <div class="text-muted">Placed on <%= new Date(order.placedAt).toLocaleString() %></div>
        </div>
        <div class="text-end">
          <div class="fw-semibold">Billed To</div>
          <div><%= order.customer.fullName %></div>
          <div><%= order.customer.email %></div>
          <div class="small text-muted" style="max-width: 240px;"><%= order.customer.address %></div>
          <div class="badge bg-success mt-2 text-uppercase">Payment: <%= order.customer.paymentMethod %></div>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table align-middle">
          <thead class="table-light">
            <tr>
              <th>Item</th>
              <th class="text-center">Qty</th>
              <th class="text-end">Price</th>
              <th class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% order.cartItems.forEach(item => { %>
              <tr>
                <td><%= item.name %></td>
                <td class="text-center"><%= item.quantity %></td>
                <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
                <td class="text-end">$<%= Number(item.subtotal).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Subtotal</th>
              <th class="text-end">$<%= subtotal.toFixed(2) %></th>
            </tr>
            <tr>
              <th colspan="3" class="text-end text-muted">Shipping</th>
              <th class="text-end text-muted">$<%= shipping.toFixed(2) %></th>
            </tr>
            <tr class="table-success">
              <th colspan="3" class="text-end">Total</th>
              <th class="text-end">$<%= total.toFixed(2) %></th>
            </tr>
          </tfoot>
        </table>
      </div>

      <div class="mt-4">
        <div class="fw-semibold mb-1">Notes</div>
        <p class="text-muted mb-0">Thank you for shopping with us! If you need assistance with this order, contact support@supermarket.app.</p>
      </div>
    </div>

    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mt-3 invoice-actions">
      <div class="download-note text-muted small">You can print or save as PDF directly from your browser.</div>
      <div class="d-flex gap-2">
        <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
        <button class="btn btn-outline-primary" onclick="downloadInvoice()">Download</button>
        <button class="btn btn-success" onclick="window.print()">Print</button>
      </div>
    </div>
  </div>

  <script>
    function downloadInvoice() {
      const node = document.getElementById('invoice');
      const blob = new Blob([`<!DOCTYPE html>${node.outerHTML}`], { type: 'text/html' });
      const url = URL.createObjectURL(blob);
      const link = document.createElement('a');
      link.href = url;
      link.download = '<%= order.invoiceNumber %>.html';
      document.body.appendChild(link);
      link.click();
      link.remove();
      URL.revokeObjectURL(url);
    }
  </script>

</body>
</html>
